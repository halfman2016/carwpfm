<Window x:Class="carm.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:carm"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="63*"/>
            <ColumnDefinition Width="17*"/>
        </Grid.ColumnDefinitions>
        <Label Content="用户名" HorizontalAlignment="Left" Height="25" VerticalAlignment="Bottom" Width="90" Margin="175,0,0,240" />
        <Label Content="密码" HorizontalAlignment="Left" Height="25" VerticalAlignment="Bottom" Width="90" Margin="175,0,0,190" />
        <TextBox HorizontalAlignment="Left" Height="25" Margin="290,170,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="190" Name="txtUsr" TabIndex="1"/>
        <Button Content="登录" HorizontalAlignment="Left" Height="25" Margin="525,195,0,0" VerticalAlignment="Top" Width="110" Click="Button_Click" Grid.ColumnSpan="2" TabIndex="3" IsTabStop="False"/>
        <PasswordBox HorizontalAlignment="Left" Margin="290,215,0,0" VerticalAlignment="Top" Width="190" Height="25" Name="txtPwd" TabIndex="2" KeyUp="txtPwd_KeyUp"/>

    </Grid>
</Window>
